  #     tty: true
  #     restart: always
  #     environment:
  #       - OLLAMA_KEEP_ALIVE=24h
  #       - OLLAMA_HOST=0.0.0.0
  #     networks:
  #       - ollama-docker

volumes:
  weaviate_data: {}


networks:
  ollama-docker:
    external: false

