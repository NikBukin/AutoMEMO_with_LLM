export const sendMemoRequest = async (
  payload: MemoPayload
): Promise<MemoResponse | null> => {
  try {
    // ... ваш существующий код try-блока
  } catch (error) {
    console.error("Error sending memo request", error);
    let errorMessage = "Network or unexpected error."; // Сообщение по умолчанию

    // Проверяем, является ли ошибка экземпляром класса Error и имеет ли свойство 'message'
    if (error instanceof Error) {
      errorMessage = error.message;
    } else if (typeof error === 'string') { // Если ошибка просто строка
      errorMessage = error;
    } else if (error && typeof error === 'object' && 'message' in error) { // Если это объект с message
      errorMessage = (error as { message: string }).message;
    }

    return { memo_text: `Error: ${errorMessage}` };
  }
};
